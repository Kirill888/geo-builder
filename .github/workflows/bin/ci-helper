#!/bin/bash

set -o errexit
set -o pipefail
set -o nounset

DEV_BRANCH="develop"

branch_name () {
    local ref="${1:-${GITHUB_REF:-}}"
    case "${ref}" in
        "refs/heads/"*)
            echo "${ref#refs/heads/}"
            ;;
        "refs/tags/"*)
            echo "${ref#refs/tags/}"
            ;;
        "refs/pull/"*)
            if [ -z "${GITHUB_HEAD_REF:-}" ] ; then
                return 1
            else
                echo "${GITHUB_HEAD_REF}"
            fi
            ;;
        *)
            return 1
            ;;
    esac
}

safe_tag_name () {
    # / -> _
    echo ${1//\//_}
}

export_cfg () {
    local ref="${1:-${GITHUB_REF:-}}"
    local sha="${2:-${GITHUB_SHA:-missing_sha}}"

    pull_cache="yes"  # always yes for now
    push_cache="yes"  # not from PR, not from Release
    push_image="yes"  # not from PR

    im_extra=""       # only set on DEV_BRANCH (develop)
    im_fallback=${ORG}/${IMAGE}:MMM  # MMM will be replaced with {builder,wheels,runner}

    build_info="$(TZ=Australia/Sydney date -Im) $sha"

    case "${ref}" in
        "refs/heads/"${DEV_BRANCH})
            BRANCH=${DEV_BRANCH}
            im_main=${ORG}/${IMAGE}:MMM

            # figure out extra tag
            git fetch --prune --unshallow 2> /dev/null || true
            vv=$(git describe --tags || echo "${sha}")  # describe --tags can fail if there are no tags
            im_extra=${ORG}/${IMAGE_DEV}:MMM-${vv}
            ;;
        "refs/heads/"*)
            BRANCH=$(safe_tag_name "${ref#refs/heads/}")
            im_main=${ORG}/${IMAGE_DEV}:${BRANCH}-MMM
            ;;
        "refs/tags/"*)
            push_cache="no"
            BRANCH=$(safe_tag_name "${ref#refs/tags/}")
            im_main=${ORG}/${IMAGE}:MMM-${BRANCH}
            ;;
        "refs/pull/"*)
            if [ -z "${GITHUB_HEAD_REF:-}" ] ; then
                return 1
            fi
            push_cache="no"
            push_image="no"
            BRANCH=$(safe_tag_name "${GITHUB_HEAD_REF}")
            im_main=${ORG}/${IMAGE_DEV}:${BRANCH}-MMM
            ;;
        *)
            return 1
            ;;
    esac
    im_builder=${im_main/MMM/builder}
    im_runner=${im_main/MMM/runner}

    all_envs='BRANCH
      pull_cache
      push_cache
      push_image
      im_main
      im_extra
      im_fallback
      im_builder
      im_runner
      build_info'

    for x in $all_envs; do
        export "${x}"                         # make it available to calling script
        echo "${x}=${!x}" >> $GITHUB_ENV      # make it available to subsequent Actions
        echo "::set-output name=${x}::${!x}"  # make it available to subsequent Actions inside if:
    done
}

pull_docker_cache () {
    local image=${1}
    local fallback=${2:-}

    if docker pull $image ; then
        echo "Pulled ${image}"
    else
        if [ -n "${fallback}" ]; then
            echo "Pulling fallback ${fallback}"
            if docker pull $fallback ; then
                echo "Using fallback: ${fallback}"
                docker tag $fallback $image
                docker rmi "$fallback"
            fi
        fi
    fi
}

[ $# -eq 0 ] || {
    cmd=$1
    shift
    $cmd $@
}
